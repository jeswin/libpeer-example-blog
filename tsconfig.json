{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"]
  },
  "include": ["./src/**/*"]
}
